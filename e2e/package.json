{
  "name": "loan-system-e2e",
  "version": "0.1.0",
  "private": true,
  "description": "E2E tests against the dockerized loan system using Jest + TypeScript",
  "scripts": {
    "build": "tsc -p .",
    "test": "jest --runInBand --config ./jest.config.ts",
    "e2e:up": "docker compose -f ../docker/docker-compose.yml up --build -d",
    "e2e:wait": "wait-on -t 120000 http://localhost:8081/loans/healthz tcp:localhost:5432 tcp:localhost:9092 tcp:localhost:19092",
    "e2e:down": "docker compose -f ../docker/docker-compose.yml down -v",
    "e2e:local": "npm run e2e:up && npm run e2e:wait && npm test && npm run e2e:down",
    "e2e:local:keep": "npm run e2e:up && npm run e2e:wait && npm test"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/pg": "^8.15.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "kafkajs": "^2.2.4",
    "pg": "^8.12.0",
    "uuid": "^9.0.1"
  }
}
